/**index.wxss**/

.container {
  padding: 0;
  background-color: rgb(250, 250, 250);
}

.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.modalDlg{
    width: 600rpx;
    height: 750rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 65rpx;
    padding: 10rpx;
    background-color: rgb(250, 250, 250);
    border-radius: 5rpx;
    font-size: 30rpx;
    overflow: scroll;
}

.recent_movie_list {
  width: 675rpx;
  white-space: nowrap;
  margin-top: 20rpx;
}

.section_title {
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.movie_preview_group {
  display: inline-block;
  width: 100%;
}

.movie_preview {
  display: inline-block;
  width: 33%;
  height: 300rpx;
  vertical-align: top;
  white-space: normal;
  margin-top: 10rpx;
  margin-bottom: 70rpx;
}

.movie_cover {
  width: 100%;
  height: 100%;
}

.movie_des {
  position: relative;
  margin-top: 5rpx;
  margin-bottom: 1rpx;
  margin-left: 15rpx;
  font-size: 25rpx;
  width: 200rpx;
}

.movie_rate {
  margin-left: 5rpx;
  color: gold;
}

.movie_type_list {
  width: 675rpx;
  margin-top: 20rpx;
}

.movie_type_list  radio{
   display: none;
}

.movie_type_list > label {
  padding: 2rpx;
  margin: 5rpx;
  word-break: keep-all;
  font-size: 25rpx;
}

.movie_type_list > label.checked {
  background-color: rgb(37, 141, 205);
  color: white;
  border-radius: 5rpx;
}

.movie_item_cover {
  display: inline-block;
  margin: 10rpx;
  vertical-align: top;
}

.movie_item_cover > image {
  width: 200rpx;
  height: 300rpx;
}

.movie_item_details {
  display: inline-block;
  width: 350rpx;
  margin: 10rpx;
  vertical-align: top;
}

.movie_item_details > text {
  display: block;
}

.movie_item_summary {
  margin: 15rpx;
}

.movie_item_label {
  color: gray
}