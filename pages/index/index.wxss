  text-decoration: underline;
}

.stamp_icon {
  position: absolute;
  z-index: 10;
  width: 200rpx;
  height: 200rpx;
  pointer-events: none
}

.recent_movie_stamp_icon {
  margin-top: 60rpx;
  margin-left: 15rpx;
}

.tagged_movie_stamp_icon {
